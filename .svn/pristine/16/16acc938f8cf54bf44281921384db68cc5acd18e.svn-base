    <!-- 根据用户获得角色集合 -->
  <select id="findSysMenuByRole" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List" />
		from sys_menu
		 where menu_id in (
			select menu_id from Sys_Role_menu where 
			role_id in 
		    <foreach collection="ids" item="id" open="(" close=")" separator=",">
			#{id}
		   </foreach>
		)
		
  </select> 
  
        <!-- 根据用户ID获得角色集合 -->
  <select id="findSysMenuByUserId" resultMap="BaseResultMap">
	select sm.* from sys_user su,sys_menu sm,sys_role sr,sys_role_menu srm,sys_user_role sur
		where 1 =1
		<if test="userId != null and userId !='' ">
		   and su.user_id = #{userId}
		</if>
		
		and su.user_id = sur.user_id
		and sr.role_id = sur.role_id
		and sr.role_id = srm.role_id
		and sm.menu_id = srm.menu_id
				
  </select> 
  
  <!-- 查询用户的所有菜单ID --> 
	<select id="queryAllMenuId" resultType="long">
		select distinct rm.menu_id from sys_user_role ur 
			LEFT JOIN sys_role_menu rm on ur.role_id = rm.role_id 
		where ur.user_id = #{userId}
	</select>
	
	<select id="queryListParentId" resultMap="BaseResultMap">
		select * from sys_menu where parent_id = #{parentId} order by order_num asc 
	</select>
	
	<!-- 获得所有菜单 -->
	
	  <select id="findAllMenu" resultMap="BaseResultMap">
		SELECT
			sm.*, (
				SELECT
					NAME
				FROM
					sys_menu
				WHERE
					menu_id = sm.parent_id
			) parentname
		FROM
			sys_menu sm
				
  </select> 
  
	
